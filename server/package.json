{
  "name": "github-actions-project",
  "version": "1.0.0",
  "scripts": {
    "start": "nodemon server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "format:check": "prettier --check .",
    "build": "echo 'Building application...' && mkdir -p dist && cp server.js dist/"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongoose": "^8.18.2",
    "supertest": "^7.1.3"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^2.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!**/node_modules/**"
    ]
  }
}
